<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<KenshiFolder>C:\Program Files (x86)\Steam\steamapps\common\Kenshi\</KenshiFolder>
		<Nullable>enable</Nullable>
		<WarningsAsErrors>nullable</WarningsAsErrors>
		<Platforms>AnyCPU</Platforms>
	</PropertyGroup>
	
	<!--Nuget package properties-->
	<PropertyGroup>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<Version>0</Version>
		<Authors>lmaydev</Authors>
		<Description>
			A wrapper SDK for the Forgotten Construction Set.
			Allows creating, loading, querying, editing and saving of mods and game data.
		</Description>
		<PackageProjectUrl>https://github.com/lmaydev/OpenConstructionSet</PackageProjectUrl>
		<RepositoryUrl>https://github.com/lmaydev/OpenConstructionSet</RepositoryUrl>
		<RepositoryType>github</RepositoryType>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<MinimumPlatformVersion>7.0</MinimumPlatformVersion>
		<DebugType>embedded</DebugType>
		<ImplicitUsings>enable</ImplicitUsings>
	</PropertyGroup>
	<ItemGroup>
	  <Compile Remove="Data\**" />
	  <EmbeddedResource Remove="Data\**" />
	  <None Remove="Data\**" />
	</ItemGroup>
	<ItemGroup>
	  <Compile Remove="OcsServiceCollectionExtensions.cs" />
	</ItemGroup>
	<ItemGroup>
	  <Compile Include="Data\IOcsDataContextBuilder.cs" />
	  <Compile Include="Data\OcsDataContext.cs" />
	  <Compile Include="Data\OcsDataContextBuilder.cs" />
	</ItemGroup>
	<ItemGroup>
	  <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
	  <PackageReference Include="Microsoft.Win32.Registry" Version="5.0.0" />
	</ItemGroup>
</Project>
